{
  "name": "mindframe",
  "displayName": "MindFrame",
  "description": "Interactive codebase visualization with AI-powered documentation and intelligent code assistance",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mindframe.showVisualization",
        "title": "Show Codebase Visualization",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.refreshVisualization",
        "title": "Refresh Visualization",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.changePersona",
        "title": "Change Documentation Persona",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.openLogFile",
        "title": "Open Debug Log File",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.configureLiteLLM",
        "title": "Configure LiteLLM API",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.generateDocsWithAI",
        "title": "Generate Documentation with AI",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.installGitHooks",
        "title": "Install Git Hooks",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.uninstallGitHooks",
        "title": "Uninstall Git Hooks",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.showMCPStatus",
        "title": "Manage MCP Connections",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.connectMCPServers",
        "title": "Connect to External Projects (MCP)",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.disconnectMCPServers",
        "title": "Disconnect MCP Servers",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.addToAgentMCP",
        "title": "Add This Project to Agent MCP",
        "category": "MindFrame"
      },
      {
        "command": "mindframe.removeFromAgentMCP",
        "title": "Remove Project from Agent MCP",
        "category": "MindFrame"
      }
    ],
    "configuration": {
      "title": "MindFrame",
      "properties": {
        "mindframe.defaultPersona": {
          "type": "string",
          "enum": [
            "developer",
            "product-manager",
            "architect",
            "business-analyst"
          ],
          "default": "developer",
          "description": "Default persona for documentation generation"
        },
        "mindframe.graphLayout": {
          "type": "string",
          "enum": [
            "hierarchical",
            "force-directed",
            "circular"
          ],
          "default": "hierarchical",
          "description": "Graph layout algorithm"
        },
        "mindframe.maxDepth": {
          "type": "number",
          "default": 3,
          "description": "Maximum depth for code analysis"
        },
        "mindframe.agentIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI Agent integration for code modifications"
        },
        "mindframe.litellm.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable LiteLLM for AI-powered documentation generation"
        },
        "mindframe.rag.useLangchain": {
          "type": "boolean",
          "default": false,
          "description": "Use LangChain-based RAG with OpenAI embeddings and Cohere reranking (requires OPENAI_API_KEY in .env)"
        },
        "mindframe.rag.cohereApiKey": {
          "type": "string",
          "default": "",
          "description": "Cohere API key for reranking (optional, improves search quality)"
        },
        "mindframe.litellm.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for LiteLLM (OpenAI, Anthropic, or LiteLLM proxy key)"
        },
        "mindframe.litellm.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "Base URL for LiteLLM API (use http://localhost:4000 for local LiteLLM proxy)"
        },
        "mindframe.litellm.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": [
            "gpt-4o-mini",
            "gpt-4o",
            "gpt-4-turbo",
            "gpt-3.5-turbo",
            "claude-3-5-sonnet-20241022",
            "claude-3-sonnet-20240229",
            "claude-3-haiku-20240307",
            "gemini-pro",
            "gemini-1.5-pro"
          ],
          "description": "LLM model to use for documentation generation"
        },
        "mindframe.mcpServers": {
          "type": "array",
          "default": [],
          "description": "MCP servers for querying external project documentation",
          "items": {
            "type": "object",
            "required": [
              "name",
              "command",
              "args"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for this server (e.g., 'Backend API')"
              },
              "command": {
                "type": "string",
                "description": "Command to run (usually 'node')"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Arguments: [path/to/mcp-server/index.js, path/to/project]"
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Whether this server is enabled"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^20.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "css-loader": "^7.1.2",
    "eslint": "^8.x",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.x",
    "typescript": "^5.x",
    "webpack": "^5.x",
    "webpack-cli": "^5.x"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@types/dagre": "^0.7.53",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "cohere-ai": "^7.14.0",
    "dagre": "^0.8.5",
    "dotenv": "^16.4.0",
    "java-parser": "^2.0.0",
    "marked": "^17.0.1",
    "openai": "^4.76.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "reactflow": "^11.11.4",
    "vis-network": "^9.1.9"
  }
}

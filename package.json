{
  "name": "codebase-visualizer",
  "displayName": "Codebase Visualizer with Cline",
  "description": "Interactive codebase visualization with AI-powered documentation and code modifications using Cline",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codebase-visualizer.showVisualization",
        "title": "Show Codebase Visualization",
        "category": "Codebase Visualizer"
      },
      {
        "command": "codebase-visualizer.refreshVisualization",
        "title": "Refresh Visualization",
        "category": "Codebase Visualizer"
      },
      {
        "command": "codebase-visualizer.changePersona",
        "title": "Change Documentation Persona",
        "category": "Codebase Visualizer"
      },
      {
        "command": "codebase-visualizer.openLogFile",
        "title": "Open Debug Log File",
        "category": "Codebase Visualizer"
      },
      {
        "command": "codebase-visualizer.configureLiteLLM",
        "title": "Configure LiteLLM API",
        "category": "Codebase Visualizer"
      },
      {
        "command": "codebase-visualizer.generateDocsWithAI",
        "title": "Generate Documentation with AI",
        "category": "Codebase Visualizer"
      },
      {
        "command": "codebase-visualizer.installGitHooks",
        "title": "Install Git Hooks",
        "category": "Codebase Visualizer"
      },
      {
        "command": "codebase-visualizer.uninstallGitHooks",
        "title": "Uninstall Git Hooks",
        "category": "Codebase Visualizer"
      }
    ],
    "configuration": {
      "title": "Codebase Visualizer",
      "properties": {
        "codebaseVisualizer.defaultPersona": {
          "type": "string",
          "enum": [
            "developer",
            "product-manager",
            "architect",
            "business-analyst"
          ],
          "default": "developer",
          "description": "Default persona for documentation generation"
        },
        "codebaseVisualizer.graphLayout": {
          "type": "string",
          "enum": [
            "hierarchical",
            "force-directed",
            "circular"
          ],
          "default": "hierarchical",
          "description": "Graph layout algorithm"
        },
        "codebaseVisualizer.maxDepth": {
          "type": "number",
          "default": 3,
          "description": "Maximum depth for code analysis"
        },
        "codebaseVisualizer.clineIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Cline integration for code modifications"
        },
        "codebaseVisualizer.litellm.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable LiteLLM for AI-powered documentation generation"
        },
        "codebaseVisualizer.litellm.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for LiteLLM (OpenAI, Anthropic, or LiteLLM proxy key)"
        },
        "codebaseVisualizer.litellm.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "Base URL for LiteLLM API (use http://localhost:4000 for local LiteLLM proxy)"
        },
        "codebaseVisualizer.litellm.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": [
            "gpt-4o-mini",
            "gpt-4o",
            "gpt-4-turbo",
            "gpt-3.5-turbo",
            "claude-3-5-sonnet-20241022",
            "claude-3-sonnet-20240229",
            "claude-3-haiku-20240307",
            "gemini-pro",
            "gemini-1.5-pro"
          ],
          "description": "LLM model to use for documentation generation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^20.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "css-loader": "^7.1.2",
    "eslint": "^8.x",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.x",
    "typescript": "^5.x",
    "webpack": "^5.x",
    "webpack-cli": "^5.x"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@types/dagre": "^0.7.53",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "dagre": "^0.8.5",
    "java-parser": "^2.0.0",
    "openai": "^6.10.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "reactflow": "^11.11.4",
    "vis-network": "^9.1.9"
  }
}
